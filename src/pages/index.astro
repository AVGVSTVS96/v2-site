<script>
  const letters: string = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";

  let intervals: Map<HTMLElement, number> = new Map();
  let animationInProgress: Map<HTMLElement, boolean> = new Map();

  function animateText(element: HTMLElement): void {
    if (intervals.has(element) || animationInProgress.get(element)) return;

    animationInProgress.set(element, true);

    let iteration: number = 0;

    const interval: number = setInterval(() => {
      element.innerText = element.innerText
        .split("")
        .map((_letter: string, index: number) => {
          if (index < iteration) {
            if (element.dataset.value) {
              return element.dataset.value[index];
            }
          }

          return letters[Math.floor(Math.random() * 26)];
        })
        .join("");

      if (element.dataset.value && iteration >= element.dataset.value.length) {
        clearInterval(interval);
        intervals.delete(element);
        animationInProgress.set(element, false);
      }

      iteration += 1 / 3;
    }, 30);

    intervals.set(element, interval as unknown as number);
  }

  document.querySelectorAll("h1, h2").forEach((element: Element) => {
    animateText(element as HTMLElement); // Animate headings on page load

    (element as HTMLElement).onmouseover = () => {
      animateText(element as HTMLElement); // Animate headings on hover
    };
  });
  // new code
  const content: HTMLElement | null = document.getElementById("content");
  const radialBackground: HTMLElement | null =
    document.querySelector(".radial_background");

  if (content && radialBackground) {
    content.addEventListener("mouseover", () => {
      radialBackground.classList.add("zoomed");
    });

    content.addEventListener("mouseout", () => {
      radialBackground.classList.remove("zoomed");
      setTimeout(() => {
        radialBackground.style.transform = "scale(1)";
      }, 500); // Reset transform after 500ms
    });
  }
</script>
